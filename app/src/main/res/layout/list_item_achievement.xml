<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:background="@drawable/main_circle_background">

	<android.support.v7.widget.AppCompatImageView
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:id="@+id/imageview_achievement_icon"
		android:src="@drawable/ic_action_achievement"
		android:background="@drawable/calendar_day_button_text_background"
		android:layout_margin="10dp"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/imageview_achievement_icon"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/textview_achievement_experience">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Title"
			android:id="@+id/textview_achievement_title"
			android:textStyle="bold"
			android:layout_margin="5dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Description"
			android:id="@+id/textview_achievement_description"
			android:layout_margin="5dp"/>

	</LinearLayout>

	<TextView
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:text="50 Exp"
		android:id="@+id/textview_achievement_experience"
		android:textStyle="bold"
		android:layout_alignParentRight="true"
		android:gravity="center"
		android:layout_margin="10dp"/>

</RelativeLayout>